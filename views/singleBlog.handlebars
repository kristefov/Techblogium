<a class="m-3" style="text-decoration:none" href="/singleBlog/{{blogs.id}}">
      <div class="container" >
        <div class="row d-flex justify-content-center">
          <div class="card" >
            <div class="card-body">
              <div class="d-flex flex-start align-items-center">
                <div>
                  <h6
                    class="fw-bold text-primary mb-1"
                  >{{blogs.user.first_name}}</h6>
                  <p class="text-muted small mb-0">
                    {{blogs.date}}
                  </p>
                </div>
              </div>
              
              <p class="mt-3 mb-4">
              </p>
              <hr class="hr" />
              <h5>{{blogs.title}}</h5>
              <div>
                <p>{{blogs.content}}</p>
              </div>
            </div>
            <div
              class="card-footer m-3 rounded border-0"
            >
              <h6>Comments</h6>
               <hr class="hr"/>
              <div class="d-flex flex-start w-100">
                {{#each blogs.comments as |comments|}}
                <p>{{comments.content}}</p>
                {{/each}}
              </div>

            </div>
          </div>

        </div>
      </div>
    </a>