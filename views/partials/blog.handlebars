   {{#if logged_in}}
   {{#each blogs as |blog|}}
  
  <div class="card m-3">
   
    <div class="container"> 
     
      <div class="row d-flex justify-content-center">
        <div class="card">
          <div class="card-body">
            <div class="d-flex flex-start align-items-center">
              <div>
                <h6 class="fw-bold text-primary mb-1">{{blog.user.first_name}}</h6>
                <p class="text-muted small mb-0">
                  {{blog.date}}
                </p>
              </div>
            </div>

            <p class="mt-3 mb-4">
            </p>
            <hr class="hr" />
            <h5>{{blog.title}}</h5>
            <div>
              <p>{{blog.content}}</p>
            </div>
          </div>
          <div
            class="card-footer py-3 rounded border-0"
            style="background-color: #f8f9fa;"
          >
           <h6>Comments</h6>
            <div class="d-flex flex-start w-100">
              <p>{{comment.content}}</p>
             

              <div class="form-outline w-100">
                <textarea
                  class="form-control"
                  id="comment-content"
                  rows="4"
                  style="background: #fff;"
                ></textarea>
                <label class="form-label" for="textAreaExample">Message</label>
              </div>
            </div>
            <div class="float-end mt-2 pt-1">
              <button type="button" id="comment" class="btn btn-primary btn-sm">Post comment</button>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
   {{/each}}
